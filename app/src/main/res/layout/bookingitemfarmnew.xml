<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:background="@android:color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:background="@color/white"
        android:gravity="left|center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/itemtittle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/white"
            android:paddingLeft="10dp"
            android:text="Select time"
            android:textAllCaps="false"
            android:textColor="@color/jaguar"
            android:textSize="20dp" />

        <ImageView
            android:id="@+id/itemclose"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:padding="15dp"
            android:src="@drawable/ic_close_black_24dp"
            android:tint="@color/jaguar" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp">


        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:padding="4dp"
            android:src="@drawable/ic_bubble_chart_black_24dp" />

        <EditText
            android:id="@+id/plotname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:layout_weight="0.1"
            android:background="@android:color/transparent"
            android:hint="Plot name"
            android:inputType="textCapWords"
            android:textColor="@color/jaguar"
            android:textSize="15dp" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/geolin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/geoimage"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:src="@drawable/image_placeholder"
            app:civ_border_color="#c0c0c0"
            app:civ_border_width="1dp" />

        <TextView
            android:id="@+id/v_geotxt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:layout_weight="0.1"
            android:background="@android:color/transparent"
            android:hint="Draw plot"
            android:inputType="phone"
            android:textColor="@color/jaguar"
            android:textSize="15dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/r_submitlin"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:background="@color/colorPrimaryDark"
        android:gravity="center"
        android:orientation="vertical">

        <com.github.bkhezry.demomapdrawingtools.CustomFontTextView
            android:id="@+id/r_submittxt"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center"
            android:background="@color/colorPrimaryDark"
            android:text="Submit"
            android:textAllCaps="false"
            android:textColor="@android:color/white"
            android:textSize="20dp" />
    </LinearLayout>

</LinearLayout>