<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <android.support.v4.widget.NestedScrollView
        android:id="@+id/scroll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:background="@color/white"
                android:gravity="left|center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/itemtittle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@color/white"
                    android:paddingLeft="10dp"
                    android:text="Crop details"
                    android:textAllCaps="false"
                    android:textColor="@color/jaguar"
                    android:textSize="20dp" />

                <ImageView
                    android:id="@+id/itemclose"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:padding="15dp"
                    android:src="@drawable/ic_close_black_24dp"
                    android:tint="@color/jaguar" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <LinearLayout
                    android:id="@+id/pastyear"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_gravity="center"
                        android:layout_weight="1.75"
                        android:padding="@dimen/paddingimg"
                        android:src="@drawable/ic_bubble_chart_black_24dp"
                        android:tint="@color/colortint" />

                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="0.25">

                        <com.github.bkhezry.demomapdrawingtools.CustomFontEditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:backgroundTint="@color/colorAccent"
                            android:hint="Crops grown in past year"
                            android:inputType="textCapWords"
                            android:textColorHint="#c6c6c6"
                            android:textSize="@dimen/textsize"
                            app:category="@string/selectable"
                            app:choices="Coconut,Apple,Orange,Others"
                            app:font="maven"
                            app:tittle="Crops grown in past year" />

                    </android.support.design.widget.TextInputLayout>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/session"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:orientation="horizontal"
                        android:weightSum="2">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:layout_gravity="center"
                            android:layout_weight="1.75"
                            android:padding="@dimen/paddingimg"
                            android:src="@drawable/ic_bubble_chart_black_24dp"
                            android:tint="@color/colortint" />

                        <android.support.design.widget.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_weight="0.25">

                            <com.github.bkhezry.demomapdrawingtools.CustomFontEditText
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:backgroundTint="@color/colorAccent"
                                android:hint="Crops grown - rabi"
                                android:inputType="textCapWords"
                                android:textColorHint="#c6c6c6"
                                android:textSize="@dimen/textsize"
                                app:category="@string/selectable"
                                app:choices="alfalfa (Lucerne),linseed,sesame,cumin (Cuminum cyminum),coriander (Coriandrum sativum),mustard (Brassica juncea),fennel (Foeniculum vulgare),fenugreek (Trigonella foenumgraecum),isabgol (Plantago ovata),Others"
                                app:font="maven"
                                app:tittle="Crops grown - rabi" />

                        </android.support.design.widget.TextInputLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:orientation="horizontal"
                        android:weightSum="2">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:layout_gravity="center"
                            android:layout_weight="1.75"
                            android:padding="@dimen/paddingimg"
                            android:src="@drawable/ic_bubble_chart_black_24dp"
                            android:tint="@color/colortint" />

                        <android.support.design.widget.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_weight="0.25">

                            <com.github.bkhezry.demomapdrawingtools.CustomFontEditText
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:backgroundTint="@color/colorAccent"
                                android:hint="Crops grown - karif"
                                android:inputType="textCapWords"
                                android:textColorHint="#c6c6c6"
                                android:textSize="@dimen/textsize"
                                app:category="@string/selectable"
                                app:choices="Jowar,Rice (paddy and deepwater),Millet,Maize (corn),Soyabean,turmeric,Groundnut,cotton,sugarcane,bitter gourd,linseed (flax),green gram (moong),seasome (till),arhar(toor),black gram (urad),cowpea (chavala),Others"
                                app:font="maven"
                                app:tittle="Crops grown - karif" />

                        </android.support.design.widget.TextInputLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:orientation="horizontal"
                        android:weightSum="2">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:layout_gravity="center"
                            android:layout_weight="1.75"
                            android:padding="@dimen/paddingimg"
                            android:src="@drawable/ic_bubble_chart_black_24dp"
                            android:tint="@color/colortint" />

                        <android.support.design.widget.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_weight="0.25">

                            <com.github.bkhezry.demomapdrawingtools.CustomFontEditText
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:backgroundTint="@color/colorPrimary"
                                android:hint="Crops grown - zaid"
                                android:inputType="textCapWords"
                                android:textColorHint="#c6c6c6"
                                android:textSize="@dimen/textsize"
                                app:category="@string/selectable"
                                app:choices="Water melon,cucumber,muskmelon,sunflower,sugarcane,Bitter gourd,Pumpkin,Others"
                                app:font="maven"
                                app:tittle="Crops grown - zaid" />

                        </android.support.design.widget.TextInputLayout>

                    </LinearLayout>


                    <LinearLayout
                        android:id="@+id/r_submitlin"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_gravity="center"
                        android:background="@color/colorPrimaryDark"
                        android:gravity="center"
                        android:orientation="vertical">

                        <com.github.bkhezry.demomapdrawingtools.CustomFontTextView
                            android:id="@+id/r_submittxt"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:background="@color/colorPrimaryDark"
                            android:gravity="center"
                            android:text="Submit"
                            android:textAllCaps="false"
                            android:textColor="@android:color/white"
                            android:textSize="20dp" />
                    </LinearLayout>


                </LinearLayout>

            </LinearLayout>


        </LinearLayout>

    </android.support.v4.widget.NestedScrollView>


</LinearLayout>