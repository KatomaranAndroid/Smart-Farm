<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:background="@android:color/white"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/tittlelin"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:background="@color/white"
        android:gravity="left|center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/itemtittle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/white"
            android:paddingLeft="10dp"
            android:text="Water details"
            android:textAllCaps="false"
            android:textColor="@color/jaguar"
            android:textSize="20dp" />

        <ImageView
            android:id="@+id/itemclose"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:padding="15dp"
            android:src="@drawable/ic_close_black_24dp"
            android:tint="@color/jaguar" />
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tittlelin">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <LinearLayout
                android:id="@+id/plotiiricationlin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="10dp"
                android:visibility="visible">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:padding="4dp"
                    android:src="@drawable/ic_grain_black_24dp" />

                <TextView
                    android:id="@+id/plotiiricationtxt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="0.1"
                    android:background="@android:color/transparent"
                    android:hint="Plot irrigation"
                    android:inputType="phone"
                    android:textColor="@color/jaguar"
                    android:textSize="15dp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/istainabilitylin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="10dp"
                android:visibility="visible">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:padding="4dp"
                    android:src="@drawable/ic_bug_report_black_24dp" />

                <TextView
                    android:id="@+id/istainabilitytxt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="0.1"
                    android:background="@android:color/transparent"
                    android:hint="Irrigation Sustainability"
                    android:inputType="phone"
                    android:textColor="@color/jaguar"
                    android:textSize="15dp" />
            </LinearLayout>


            <LinearLayout
                android:id="@+id/irrigationLiftlin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="10dp"
                android:visibility="visible">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:padding="4dp"
                    android:src="@drawable/ic_ac_unit_black_24dp" />

                <TextView
                    android:id="@+id/irrigationLifttxt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="0.1"
                    android:background="@android:color/transparent"
                    android:hint="Irrigation Lift"
                    android:inputType="phone"
                    android:textColor="@color/jaguar"
                    android:textSize="15dp" />
            </LinearLayout>


            <LinearLayout
                android:id="@+id/isystemlin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="10dp"
                android:visibility="visible">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:padding="4dp"
                    android:src="@drawable/ic_device_hub_black_24dp" />

                <TextView
                    android:id="@+id/isystemtxt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="0.1"
                    android:background="@android:color/transparent"
                    android:hint="Irrigation system"
                    android:inputType="phone"
                    android:textColor="@color/jaguar"
                    android:textSize="15dp" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="?android:attr/selectableItemBackground"
                android:orientation="vertical">


                <com.github.bkhezry.demomapdrawingtools.CustomFontTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:padding="5dp"
                    android:text="Add Irrigation source"
                    android:textSize="15dp"
                    android:textStyle="bold"
                    app:font="MavenBold" />


                <com.takusemba.multisnaprecyclerview.MultiSnapRecyclerView
                    android:id="@+id/first_recycler_view1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginTop="5dp"
                    app:msrv_gravity="start"
                    app:msrv_snap_count="1" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="?android:attr/selectableItemBackground"
                android:orientation="vertical">


                <com.github.bkhezry.demomapdrawingtools.CustomFontTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:padding="5dp"
                    android:text="Add Irrigation Systems"
                    android:textSize="15dp"
                    android:textStyle="bold"
                    app:font="MavenBold" />


                <com.takusemba.multisnaprecyclerview.MultiSnapRecyclerView
                    android:id="@+id/first_recycler_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginTop="5dp"
                    app:msrv_gravity="start"
                    app:msrv_snap_count="1" />

            </LinearLayout>


            <LinearLayout
                android:id="@+id/r_submitlin"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_alignParentBottom="true"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                android:background="@color/colorPrimaryDark"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/r_submittxt"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:background="@color/colorPrimaryDark"
                    android:gravity="center"
                    android:text="Submit"
                    android:textAllCaps="false"
                    android:textColor="@android:color/white"
                    android:textSize="20dp" />
            </LinearLayout>


        </LinearLayout>
    </ScrollView>
</RelativeLayout>